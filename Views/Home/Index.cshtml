            @*work environment section*@
            <div class="Work_environment p-5 container-fluid shadow-lg rounded-3 align-items-center justify-content-between gap-4" data-aos="fade-down">
                <div class="sectionName text-white-50 text-center">
                    <h3 class="text-center">My Work <span class="fw-bold" style="color:#2E86C1">Environment</span></h3>
                    <p class="text-white-50">
                        I work in a clean, well-organized, and fully equipped environment that fosters creativity and productivity.
                        From powerful development tools to a stable internet connection and modern hardware,
                        my setup allows me to deliver high-quality work efficiently and consistently.
                    </p>
                    </div>
                <div class="Frontend mt-5">
                    @* <div class="title"><h4 class="text-white text-center">FRONTEND</h4></div> *@
                    <div class="items row g-4 mt-3 d-flex flex-wrap" id="featuresContainer">
                        <script>
                            fetch('/data/features.json')
                              .then(response => response.json())
                              .then(data => {
                                const container = document.getElementById('featuresContainer');

                                data.technologies.forEach(item => {
                                  // on génère une carte par technologie
                                  container.innerHTML += `
                                    <div class="card col-md-4 align-items-center justify-content-between shadow-lg p-5" style="background:#17202A">
                                      <img src="${item.logo.replace('~', '')}" class="card-img-top" alt="${item.id}" style="height:100px; width:100px">
                                      <div class="card-body">
                                        <h5 class="card-title text-white-50">${item.id}</h5>
                                      </div>
                                    </div>
                                  `;
                                });
                              })
                              .catch(error => console.error("Erreur lors du chargement des données :", error));
                        </script>
                    </div>
                </div>
