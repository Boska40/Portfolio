            @*testimonial section*@
            <div class="testimonial p-5 container-fluid shadow-lg rounded-3 align-items-center justify-content-between gap-4" data-aos="fade-left">
                <div class="sectionName text-dark text-center"><h3 class="text-center">What My Clients <span class="fw-bold" style="color:#2E86C1">Say?</span></h3></div>
                <div class="row mt-5" id="testimonialContainer">
                    <script>
                        fetch('/data/features.json')
                          .then(response => response.json())
                          .then(data => {
                            const container = document.getElementById('testimonialContainer');

                            data.costumers.forEach(person => {
                              container.innerHTML += `
                                <div class="col-md-4 mb-4">
                                  <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                      <div class="d-flex align-items-center mb-3">
                                        <img src="${person.photo.replace('~', '')}" alt="Photo of ${person.name}" class="rounded-circle me-3" width="50" height="50">
                                        <div>
                                          <h6 class="mb-0">${person.name}</h6>
                                          <small class="" style="color:#2E86C1">${person.company}</small>
                                        </div>
                                      </div>
                                      <p class="card-text">"${person.testimonial}"</p>
                                    </div>
                                  </div>
                                </div>
                              `;
                            });
                          })
                          .catch(error => console.error("Erreur de chargement des témoignages :", error));
                    </script>

                </div>
            </div>

            @*prices sections*@
            <div class="prices p-5 container-fluid shadow-lg mb-3 rounded-3 align-items-center justify-content-between gap-4" data-aos="zoom-in">
                <div class="sectionName text-dark text-center"><h3 class="text-center">My <span class="fw-bold" style="color:#ffffff">Prices</span></h3></div>
                <h4 class="text-center text-white-50">Transparent and Flexible Pricing</h4>
                <p class="text-center text-white-50">
                    I offer clear and flexible pricing plans tailored to your project needs.
                    Whether you’re looking for a basic website, a custom web app, or digital strategy support,
                    I’ll work with you to find the most cost-effective solution without compromising on quality.
                </p>
                <div class="container my-5">
                    <div class="row" id="servicesContainer"></div>
                </div>

                <script>
                    fetch('/data/features.json')
                      .then(response => response.json())
                      .then(data => {
                        const container = document.getElementById('servicesContainer');

                        if (!data.services || !Array.isArray(data.services)) {
                          console.error("Données de services manquantes ou mal formées.");
                          return;
                        }

                        data.services.forEach(service => {
                          container.innerHTML += `
                            <div class="col-md-4 col-sm-6 mb-4">
                              <div class="card h-100 shadow rounded-3">
                                <img src="${service.image}" class="card-img-top" alt="${service.service}" style="height: 200px; object-fit: cover;">
                                <div class="card-body d-flex flex-column justify-content-between">
                                  <h6 class="card-title text-center">${service.service}</h6>
                                  <p class="text-center" style="color:#2E86C1">${service.Price.toLocaleString()} XAF</p>
                                  <a href="https://wa.me/+237656531016" class="btn btn-success mt-auto shadow text-white fw-bold" target="_blank">Book Now</a>
                                </div>
                              </div>
                            </div>
                          `;
                        });
                      })
                      .catch(error => console.error('Erreur chargement services :', error));
                </script>

            </div>

