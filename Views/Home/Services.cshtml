@{
    ViewData["Title"] = "Services";
}

<div class="container my-5" data-aos="fade-up">
    <div class="Boxheader">
        <h2>What I Offer?</h2>
        <p>I provide a wide range of digital services to help individuals and businesses build a strong online presence. 
            Whether you need a custom website, an eye-catching design, or reliable IT support, 
            I combine creativity and technical expertise to deliver solutions that are both effective and tailored to your goals. 
            My mission is to turn your ideas into impactful digital experiences.</p>
    </div>
    <div class="row" id="servicesContainer">
        <script>
            fetch('/data/features.json')
              .then(response => response.json())
              .then(data => {
                const services = data.My_Services;
                const container = document.getElementById('servicesContainer');

                services.forEach(service => {
                  const col = document.createElement('div');
                  col.className = 'col-12 col-md-6 col-lg-3 d-flex align-items-stretch mb-4';

                  col.innerHTML = `
                    <div class="card shadow-sm rounded-4 text-center h-100">
                      <img src="${service.logo}" class="card-img-top" alt="${service.name}" style="height: 200px; object-fit: cover;">
                      <div class="card-body d-flex flex-column">
                        <h5 class="card-title">${service.name}</h5>
                        <p class="card-text" style="color:#203D60">${service.description}</p>
                      </div>
                    </div>
                  `;

                  container.appendChild(col);
                });
              })
              .catch(error => console.error('Error loading services:', error));
        </script>

    </div>
</div>

